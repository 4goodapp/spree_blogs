<% content_for :page_title do %>
   <%= Spree.t(:edit_blog) %>
<% end %>

<% content_for :page_actions do %>
<%= button_link_to Spree.t(:back_to_blogs_list), spree.admin_blogs_url, icon: "arrow-left#{ICON_SVG}" %>
<% end %>

<%= render "spree/shared/error_messages", target: @blog %>

<%= form_for [:admin, @blog] do |f| %>
  <fieldset class="no-border-top">
    <%= render partial: f %>
    <%= render partial: 'spree/admin/shared/edit_resource_links' %>
  </fieldset>
<% end %>
