<% content_for :page_title do %>
   <%= Spree.t(:new_post) %>
<% end %>

<% content_for :page_actions do %>
<%= button_link_to Spree.t(:back_to_posts_list), spree.admin_posts_url, icon: "arrow-left#{ICON_SVG}" %>
<% end %>

<%= render "spree/shared/error_messages", target: @post %>

<%= form_for [:admin, @post] do |f| %>
  <fieldset class="no-border-top">
    <%= render partial: f %>
    <%= render partial: 'spree/admin/shared/new_resource_links' %>
  </fieldset>
<% end %>
